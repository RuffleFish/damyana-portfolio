<ol class="col-start-4 col-end-13">
  {% for post in postslist %}
    {% if post.data.published %}
    <li class="py-20 border-t border-gray-200 dark:border-gray-800 md:border-b md:border-t-0 md:pt-0 md:pb-10 md:mb-10">
      <article class="md:grid md:grid-cols-6 md:gap-5">
        <div class="md:col-start-1 md:col-end-5">
          <h3 class="">
            <a
              href="{{ post.url | url }}"
              title="read {{ post.data.title }}"
              class="font-semibold text-2xl hover:text-purple-800 hover:underline dark:text-yellow-200 dark:hover:text-yellow-400"
            >
              {% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}
            </a>
          </h3>

          <span class="text-gray-800 dark:text-gray-300 font-serif text-xl italic"> {{ post.data.subHeading }}</span>
          <time datetime="{{ post.date | htmlDateString }}" class="font-serif whitespace-nowrap text-gray-600 dark:text-gray-300 italic">&mdash; {{ post.date | readableDate }}</time>
        </div>
        {% if post.data.featuredImg %}
          <picture class="hidden md:block md:col-start-5 md:col-end-7 w-full">
            <img
              loading="lazy"
              alt="{{ post.data.title }}"
              src="https://res.cloudinary.com/kailoon/image/upload/v1613700746/kailoon.com/{{post.data.featuredImg}}.webp"
              srcset="https://res.cloudinary.com/kailoon/image/upload/dpr_auto,q_auto,w_221/v1613700746/kailoon.com/{{post.data.featuredImg}}.webp 768w"
            />
          </picture>

        {% endif %}
      </article>
    </li>
    {% endif %}
  {% endfor %}
</ol>
