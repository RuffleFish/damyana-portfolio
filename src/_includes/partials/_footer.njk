<!-- footer start -->
<footer id="footer" class="border-t border-gray-100">
  <div class="max-w-screen-lg m-auto sm:flex sm:justify-between sm:items-end text-sm pb-16">
    <p id="credit" class="p-5 lg:p-10 text-gray-500">2021 &copy; kailoon.<br>
      This site was designed in
      <a href="https://www.figma.com/" target="_blank" rel="noreferrer">Figma</a>, coded in
      <a href="https://www.11ty.dev/" target="_blank" rel="noreferrer">11ty</a>, styled with
      <a href="https://tailwindcss.com/" target="_blank" rel="noreferrer">tailwindcss</a> and deployed via
      <a href="https://www.netlify.com/" target="_blank" rel="noreferrer">Netlify</a>.
    </p>
    <p class="p-5 lg:p-10">
      <span class="inline-flex space-x-5 leading-tight">
        {% for item, url in metadata.socials %}
          <a href="{{ url }}" class="text-black" target="_blank" rel="noreferrer" title="follow me on social media" class="shadow md:transition-colors sm:hover:text-purple-800 md:hover:shadow-md">{{ item }}</a>
          {% endfor %}
      </span>
    </p>

    <!-- sticky footer for mobile -->
    <div id="sticky-footer"
      class="md:hidden text-base w-full px-5 flex justify-between items-center fixed bottom-0 bg-purple-50 text-purple-800 md:relative">
      {% set navPages = collections.all | eleventyNavigation %}
        {%- for entry in navPages %}
          <a
          href="{{ entry.url | url }}"
          class="text-purple-800 py-4
          {% if entry.url == page.url %} bg-purple-200 {% endif %}
          "
          >{{ entry.title }}</a>
      {%- endfor %}
        <a
          href="{{ metadata.author.mailtolink }}"
          title="get in touch"
          target="_blank"
          rel="noreferrer"
          class="text-purple-800 py-4"
        >Contact
        </a>
    </div>
  </div>
</footer>
<!-- footer end -->