<!-- footer start -->
<footer id="footer" class="border-t border-gray-100">
  <div class="max-w-screen-lg m-auto">
    <p id="credit" class="p-5 lg:p-10 text-gray-500 mb-0 pb-24 md:pb-10">2021 &copy; kailoon.
      <span class="inline-flex space-x-2 leading-tight">
        {% for item, url in metadata.socials %}
          <a href="{{ url }}" target="_blank" rel="noreferrer" title="follow me on social media" class="shadow md:transition-colors sm:hover:text-purple-800 md:hover:shadow-md">{{ item }}</a>
          {% endfor %}
      </span>

      <br>This site was designed in
      <a href="https://www.figma.com/" target="_blank" rel="noreferrer">Figma</a>, coded in
      <a href="https://www.11ty.dev/" target="_blank" rel="noreferrer">11ty</a>, styled with
      <a href="https://tailwindcss.com/" target="_blank" rel="noreferrer">tailwindcss</a> and deployed via
      <a href="https://www.netlify.com/" target="_blank" rel="noreferrer">Netlify</a>.
    </p>

    <!-- sticky footer for mobile -->
    <div id="sticky-footer"
      class="md:hidden text-base w-full flex justify-between fixed bottom-0 p-5 bg-purple-50 text-purple-800 md:relative">
      {% set navPages = collections.all | eleventyNavigation %}
        {%- for entry in navPages %}
          <a
          href="{{ entry.url | url }}"
          class="text-purple-800 shadow hover:shadow-md
          {% if entry.url == page.url %} shadow-md{% endif %}
          "
          >{{ entry.title }}</a>
      {%- endfor %}
        <a
          href="{{ metadata.author.mailtolink }}"
          title="get in touch"
          target="_blank"
          rel="noreferrer"
        ><span class="py-2 px-4 bg-purple-800 text-purple-100 rounded-md hover:bg-purple-100 transition-colors hover:text-purple-800">Get in touch</span>
        </a>
    </div>
  </div>
</footer>
<!-- footer end -->