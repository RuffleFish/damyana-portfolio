<!-- hero -->
<section id="hero" class="mt-28 lg:mt-24">
  <div class="max-w-screen-lg m-auto px-5 lg:px-10 md:relative">
    <div class="border-b border-gray-100 pb-20">
    {% if page.url==='/'%}
      <img
        loading=lazy
        class="rounded-full w-14 h-14 mb-5"
        src="{{ metadata.author.avatar }}"
        alt="avatar"
        width="56"
        height="56"
      />
    {% endif %}
      <div class="font-black tracking-tight leading-relaxed">
        <h1 class="text-3xl md:text-6xl font-black md:block md:mb-3">{{ title }} </h1>
        <h2 class="text-2xl md:text-3xl text-gray-500 font-semibold"> {{ description }}</h2>
      </div>
    </div>
  </div>
</section>
<!-- hero end -->