<!-- hero -->
<section id="hero" class="mt-24 lg:mt-24">
  <div class="max-w-screen-lg m-auto px-5 lg:px-10">
    <div class="border-b border-gray-200 dark:border-gray-800 pb-20">
      {% if heroImg %}
        {% respimg heroImg, title, style %}
      {% endif %}

      {% if page.url==='/'%}
        <img src="{{metadata.author.avatar}}" class="rounded-full w-16 h-16 mb-5" alt="my avatar" />
      {% endif %}

      <div class="font-black tracking-tight leading-relaxed {% if tags %}{% if 'posts' in tags %}md:grid md:grid-cols-10 gap-5{% endif %}{% endif %}">
        <div class="col-start-3 col-end-12">
          <h1 class="text-4xl md:text-6xl font-extrabold md:block md:mb-3 dark:text-white">{{ title }} </h1>
          {% if subHeading %}
            <h2 class="font-serif italic text-2xl md:text-3xl text-gray-700 font-medium dark:text-gray-400"> {{ subHeading }}</h2>
          {% endif %}

          {% if description %}
            <h2 class="text-2xl md:text-3xl text-gray-500 font-semibold dark:text-gray-400"> {{ description }}</h2>
          {% endif %}
        </div>
      </div>

    </div>
  </div>
</section>
<!-- hero end -->