<section id="works" class="mb-20">
  <div class=" px-5 lg:px-10 max-w-screen-xl lg:mx-auto">
    <div class="py-10 grid gap-5 grid-cols-1 sm:grid-cols-2 md:grid-cols-3 grid-flow-row-dense">

      <div class="xl:mx-32 sm:col-span-2 md:col-span-3 md:mb-5 sm:w-4/6">
        <h3 class="text-gray-600 text-xs uppercase tracking-widest mb-5 dark:text-gray-400">{{ data.featuredWorkTitle }}</h3>
        <span class="font-medium text-xl block mb-5">
        {{ data.featuredWorkDescription }}
        </span>
        <a href="/works/" title="view more" class="text-purple-800 dark:text-yellow-200 border-b border-purple-200 dark:border-gray-700 dark:hover:text-yellow-400 dark:hover:border-gray-600">{{ data.browseFullPortfolio }}</a>
      </div>

      {% for item in collections.works %}
        {% if item.data.featured %}
          <a href="{{item.url}}" title="view {{item.data.title}}" class="{% if item.data.span %}sm:col-span-2 sm:row-span-2{% endif%} post">
            {% respimg item.data.featuredImg, item.data.title, item.data.bgColor %}
          </a>
        {% endif %}
      {% endfor %}

    </div>
  </div>
</section>