<section id="works" class="pb-24 md:pb-36">
  <div class="px-5 max-w-screen-xl lg:mx-auto">
    <div class="py-10 grid gap-x-2 gap-y-5 grid-cols-1 md:grid-cols-3 grid-flow-row-dense">

      <div class="md:col-span-3">
        {# <h3 class="text-rose-700 mb-10 text-sm font-bold tracking-widest uppercase dark:text-gray-400">{{ data.featuredWorkTitle }}</h3> #}
        <span class="block text-xl tracking-tight text-gray-700 dark:text-gray-300 mb-10 md:w-2/3">
        {{ data.featuredWorkDescription }}
        </span>
      </div>

      {% for item in collections.works %}
        {% if item.data.featured %}
          {# <a href="{{item.url}}" title="view {{item.data.title}}" class="{% if item.data.span %}md:col-span-2 md:row-span-2{% endif%} post"> #}

          <a href="{{item.url}}" title="view {{item.data.title}}" class="post bg-gray-800 relative md:transform md:hover:-translate-y-2 md:transition-transform">
            <article style="height:560px;background-color: #{{item.data.bgColor}}">
            <header class="p-5 lg:p-8">
              <span class="text-gray-800 text-3xl tracking-tighter font-bold block">{{ item.data.title }}</span>
              <span class="text-gray-600 text-base font-normal">{{ item.data.tasks }}</span>
            </header>
            <picture class="absolute bottom-0">
            {% respimg item.data.featuredImg, item.data.title %}
            </picture>
            </article>
          </a>
        {% endif %}
      {% endfor %}

    </div>
  </div>
</section>