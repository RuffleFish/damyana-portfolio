<!-- services -->
<section id="services" class="my-10 md:my-20">
<div class="max-w-screen-lg m-auto lg:px-10 px-5">
  <div class="grid gap-10 grid-cols-1 sm:grid-cols-2 md:grid-cols-3 border-t border-gray-200 dark:border-gray-800 py-10">
    {% for item in data.services %}
      {% if item.name === 'Services' %}
        <div class="sm:col-span-2 md:col-span-3 md:mb-5 sm:w-4/6">
          <h3 class="text-gray-600 dark:text-white text-xs uppercase tracking-widest mb-5">{{ item.name }}</h3>
          <p class="font-medium text-xl">{{ item.description }}</p>
        </div>
        {% else %}
        <div>
          <h3 class="font-bold dark:text-white">{{ item.name }}</h3>
          <p class="text-gray-600 md:pb-5 post dark:text-gray-200">{{ item.description | safe }}</p>
          <p class="leading-8">
            {% for item in item.tags%}
            <span class="bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-100 text-xs py-1 px-2 whitespace-nowrap rounded">{{item}}</span>
            {% endfor %}
          </p>
        </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>
<!-- services end -->